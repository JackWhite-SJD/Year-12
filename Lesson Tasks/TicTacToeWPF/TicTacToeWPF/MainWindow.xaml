<Window x:Class="TicTacToeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="Auto"/>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>       
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin=" 2">
            <TextBlock Text="Player X:"/>
            <TextBox x:Name="playerX" Width="200" Margin="0,2,0,5"/>
            <TextBlock Text="Player O :" />
            <TextBox x:Name="playerO" Width="200" Margin="0,2,0,5"/>
        </StackPanel>
        <TextBlock x:Name="turnIndincator" Width="100" Margin="0,2,0,5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" VerticalAlignment="Center" Text="X's turn"/>
        <Button x:Name="resetButton" Content="Reset" Click="resetButton_Click" Width="200" Grid.Row="0" Grid.Column="3"/>
        
        <Button x:Name="vsComputer" Grid.Row="1" Grid.Column="0" Click="vsComputer_Click" />
        
        <Button x:Name="btn0" Grid.Row="1" Grid.Column="1" Click="Button_Click" Tag ="0"/>
        <Button x:Name="btn1" Grid.Row="1" Grid.Column="2" Click="Button_Click" Tag ="1"/>
        <Button x:Name="btn2" Grid.Row="1" Grid.Column="3" Click="Button_Click" Tag ="2"/>

        <Button x:Name="btn3" Grid.Row="2" Grid.Column="1" Click="Button_Click" Tag="3"/>
        <Button x:Name="btn4" Grid.Row="2" Grid.Column="2" Click="Button_Click" Tag="4"/>
        <Button x:Name="btn5" Grid.Row="2" Grid.Column="3" Click="Button_Click" Tag="5"/>

        <Button x:Name="btn6" Grid.Row="3" Grid.Column="1" Click="Button_Click" Tag="6"/>
        <Button x:Name="btn7" Grid.Row="3" Grid.Column="2" Click="Button_Click" Tag="7"/>
        <Button x:Name="btn8" Grid.Row="3" Grid.Column="3" Click="Button_Click" Tag="8"/>

    </Grid>
</Window>
